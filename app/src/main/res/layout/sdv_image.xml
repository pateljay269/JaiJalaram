<?xml version="1.0" encoding="utf-8"?>
<com.facebook.drawee.view.SimpleDraweeView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sdvImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/back"
    fresco:actualImageScaleType="fitXY"
    fresco:fadeDuration="200"
    fresco:failureImage="@drawable/refresh"
    fresco:failureImageScaleType="fitCenter"
    fresco:placeholderImage="@color/transparent"
    fresco:placeholderImageScaleType="centerInside"
    fresco:progressBarAutoRotateInterval="1000"
    fresco:progressBarImage="@drawable/loading"
    fresco:progressBarImageScaleType="centerInside"
    fresco:retryImage="@drawable/order"
    fresco:retryImageScaleType="centerInside"
    fresco:roundAsCircle="false"
    fresco:roundBottomLeft="true"
    fresco:roundBottomRight="true"
    fresco:roundTopLeft="true"
    fresco:roundTopRight="true"
    fresco:roundedCornerRadius="5dp"
    fresco:roundingBorderWidth="5dp" />